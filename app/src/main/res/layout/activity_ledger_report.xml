<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LedgerReportActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_second_col2"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/arrow_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/white"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ledger Report"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/ledgerreport_cardview1"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:layout_gravity="center"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textColor="#0AE419"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/from_textview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/from_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendar"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="110dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ledgerreport_cardview2"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:textColor="#0AE419"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/to_textview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/to_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendar"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="110dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/ledgerreport_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Filter"
        android:textAllCaps="false"
        android:background="@drawable/spinner"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#0AE419"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ledgerreport_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
</LinearLayout>